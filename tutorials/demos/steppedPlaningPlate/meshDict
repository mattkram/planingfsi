# Create submeshes

dict_ = kp.Dictionary('configDict')
AOA = dict_.read('AOA', 10.0)

# Create points (ID, type, params)
mesh.addPoint(1, 'rel', [ 0, 180, 0.1])
mesh.addPoint(2, 'rel', [ 0,   0, 1.0])
mesh.addPoint(3, 'rel', [ 1,  90, 0.01])
mesh.addPoint(4, 'rel', [ 3, 180, 0.9])

mesh.rotatePoints(0, AOA, [1,2,3,4])

meshFwd = mesh.addSubmesh('fwdPlate')
meshFwd.addCurve(1, 2, Nel=10)

meshAft = mesh.addSubmesh('aftPlate')
meshAft.addCurve(4, 3, Nel=10)
