# Create submeshes

K = io.Dictionary('configDict')
AOA = K.read('AOA', 10.0)

# Create points (ID, type, params)
M.addPoint(1, 'rel', [ 0, 180, 0.1])
M.addPoint(2, 'rel', [ 0,   0, 1.0])
M.addPoint(3, 'rel', [ 1,  90, 0.01])
M.addPoint(4, 'rel', [ 3, 180, 0.9])

M.rotatePoints(0, AOA, [1,2,3,4])

M1 = M.addSubmesh('fwdPlate')
M1.addCurve(1, 2, Nel=10)

M2 = M.addSubmesh('aftPlate')
M2.addCurve(4, 3, Nel=10)
