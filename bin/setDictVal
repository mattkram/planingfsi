#!/bin/sh

filename=$1
varname=$2
newval=$3

oldline=`grep -n "$varname " $filename`
if [ -n "$oldline" ]; then
  linenum=`echo $oldline | cut -d ':' -f 1`
  oldval=`echo $oldline | cut -d ':' -f 3`
  oldval=`echo $oldval | cut -d ' ' -f 1 | tr -d ' '`
  
  sed -i '' -e "${linenum}s,$oldval,$newval,g" $filename
fi
